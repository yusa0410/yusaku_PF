<div class="container">
  <div class="row">
    <h2 class="my-4 text-center">ダイレクトメッセージ</h2>
  </div>
  
  <h4>参加者</h4>
    <% @entries.each do |e| %>
      <h4><strong><a href="/users/<%= e.user.id %>"><%= e.user.username %>さん</a></strong></h4>
    <% end %>
  
  <hr>
  <% if @direct_messages.present? %>
  <% @direct_messages.each do |m| %>
    <strong><%= m.comment %></strong>
    <small>by <strong><a href="/users/<%= m.user_id %>"><%= m.user.username %>さん</a></strong></small>
    <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
  <hr>
  <% end %>
  <% else %>
    <h3 class="text-center">メッセージはまだありません</h3>
  <% end %>

  <div class="py-4">
  <%= form_for @direct_message do |f| %>
    <%= f.text_field :comment, :placeholder => "メッセージを入力して下さい" , :size => 70 %>
    <%= f.hidden_field :room_id, :value => @room.id %>
    <%= f.submit "投稿する" %>
  <% end %>
  </div>
</div>

